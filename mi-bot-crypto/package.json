{
  "name": "crypto-sentiment-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "add": "node src/cli.js",
    "download": "node descargar_config.js",
    "predict": "node predictor.js",
    "predict-scheduler": "node predictor_scheduler.js",
    "show-history": "node show_history.js",
    "generate-report": "node generate_report.js",
    "regenerate-css": "node -e \"const fs = require('fs'); fs.unlinkSync('./styles.css'); require('./generate_report.js');\"",
    "open-report": "start prediction_report.html",
    "full-report": "npm run predict && node predictor_single.js && npm run generate-report && npm run open-report",
    "market-report": "node reporte_html.js",
    "market-report-scheduler": "node reporte_html_scheduler.js",
    "open-market": "node -e \"require('child_process').exec('start reporte_mercado_*.html')\"",
    "report": "node reporte_completo.js",
    "report-scheduler": "npm run report && while true; do sleep 3600 && npm run report; done",
    "open-report-complete": "node -e \"require('child_process').exec('start reporte_completo_*.html')\""
  },
  "dependencies": {
    "@coinbase/coinbase-sdk": "^0.25.0",
    "axios": "^1.13.2",
    "dotenv": "^16.4.0",
    "newsapi": "^2.4.1",
    "sentiment": "^5.0.2"
  }
}
